if (window.jQuery) {
  (function($) {
    $(document).ready(function() {
      $.ajax({ url: "<%= path.html_safe %>" }).always(function(response) {
        $("#<%= container_id %>").replaceWith(response);

        <% if event_name.present? %>
          if (typeof(Event) === 'function') {
            document.dispatchEvent(new Event("<%= event_name %>"));
          } else {
            var ieEvent = document.createEvent("IE_Event");
            ieEvent.initEvent("<%= event_name %>", true, true);
            document.dispatchEvent(ieEvent);
          }
        <% end %>
      });
    });
  }(jQuery));
} else {
  (function() {
    document.addEventListener("DOMContentLoaded", function() {
      var request = new XMLHttpRequest();
      var asyncRequest = true;
      var SUCCESS = 200;
      var ERROR = 400;

      request.open("GET", "<%= path.html_safe %>", asyncRequest);

      request.onload = function() {
        if (request.status >= SUCCESS && request.status < ERROR) {
          var container = document.getElementById("<%= container_id %>");
          container.outerHTML = request.response;

          <% if event_name.present? %>
            document.dispatchEvent(new Event("<%= event_name %>"));
          <% end %>
        }
      };

      request.send();
    });
  })();
}
